<%= body_class 'contact-us-page' %>

<div class="subheader">
  <h2>Contact us</h2>
</div>

<section class="container">
  <div class="got-a-question">
    <h3>Got a question?<br/>Want to get in touch?</h3>
    <form class="piece">
      <fieldset>
        <input type="text" placeholder="Name"/>
        <input type="email" placeholder="Email"/>
        <input type="text" placeholder="Subject"/>
        <textarea rows="6"></textarea>
        <input type="submit" value="Send"/>
      </fieldset>
    </form>
  </div>
  <div class="we-love-feedback">We love feedback!</div>
</section>
